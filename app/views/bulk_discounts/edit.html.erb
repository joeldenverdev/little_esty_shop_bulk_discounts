<%= form_with url: merchant_bulk_discount_path(@merchant, @bd), method: :patch, local: true do |f| %>
  <%= f.label :discount %>
  <%= f.text_field :discount, value: @bd.discount %>
  <%= f.label :threshold %>
  <%= f.text_field :threshold, value: @bd.threshold %>

  <%= f.submit "Submit"  %>
<% end %>
