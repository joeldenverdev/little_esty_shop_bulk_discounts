<%= form_with url: "/merchant/#{@merchant.id}/bulk_discounts/#{@bd.id}", method: :patch, local: true do |f| %>
  <%= f.label :discount %>
  <%= f.text_field :discount, value: @bd.discount %>
  <%= f.label :threshold %>
  <%= f.text_field :threshold, value: @bd.threshold %>

  <%= f.submit "Submit"  %>
<% end %>
